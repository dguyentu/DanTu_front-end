<article class="card">
  <div class="card-body">
    <h3 class="card-title mb-3"><u>At a Glance</u></h3>
    <div class="row">
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center" id="numOfCustomers">{{this.model.length}}</h5>
        <div class="card-text text-center">
          <span>Customers in Pipeline</span>
        </div>
      </div>
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center" id="totalBudget">${{this.totalBudget}}M</h5>
        <div class="card-text text-center">
          <span>Total Forecasted Budget</span>
        </div>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center" id="employedCustomers">{{this.employedCustomersCount}}</h5>
        <div class="card-text text-center">
          <span>Employed Customers</span>
        </div>
      </div>
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center" id="averageBudget">${{this.averageBudget}}M</h5>
        <div class="card-text text-center">
          <span>Average Budget</span>
        </div>
      </div>
    </div>
    <div class="row mt-4 {{if isCollapsed "collapse"}}">
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center" id="zeroBudget">{{this.nonExistentBudgetCount}}</h5>
        <div class="card-text text-center">
          <span>Customers without a Budget</span>
        </div>
      </div>
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center" id="pctBelowAvg">{{this.customersBelowAverageBudget}}%</h5>
        <div class="card-text text-center">
          <span>Customers below average Budget</span>
        </div>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-12 d-flex justify-content-center">
        <button class="btn btn-info mt-2" {{action "toggleCollapsedInfo"}} id="collapseButton">More</button>
      </div>
    </div>
  </div>
</article>